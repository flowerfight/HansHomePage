@using HansHomePage.Models;

@model HansHomePage.Models.ArticleEditViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_TestLayoutPage.cshtml";
}

<div id="blogpost" class="inner-content">
    <section id="page-title" class="inner-section">
        <div class="container-fluid nopadding cd-words-wrapper fadeInRight" data-wow-delay="0.4s"
             data-wow-offset="10" style="height:40px;">
            @if ((string)Session["ID"] == "admin")
            {
                <h2 class="font-accident-two-normal uppercase">관리자 모드</h2>
            }
            else
            {
                <h2 class="font-accident-two-normal uppercase">게시글 수정</h2>
            }
        </div>
    </section>

    <section class="inner-section">
        <div class="container-fluid nopadding">
            <div class="wow fadeInDown" data-wow-delay="0.6s" data-wow-offset="10">
                <div class="dividewhite2"></div>

                <form id="formdata" action="@Url.Action("Edit", "Board")" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-12">
                            <p>
                                <label>제목</label>
                                @Html.TextBoxFor(m => m.Articles.Title, new { placeholder = "제목을 입력하세요." })
                                @Html.HiddenFor(m => m.Articles.ArticleIDX)
                            </p>
                        </div>
                        <div class="col-md-12">
                            <label>분류</label>
                        </div>
                        <div class="col-md-12">
                            <p>
                                @Html.DropDownListFor(m => m.Articles.ArticleType, new SelectList(new List<Object>{
                                new { value = "", text = "선택" },
                                new { value = "C#", text = "C#" },
                                new { value = "JAVA", text = "JAVA" },
                                new { value = "C++", text = "C++" } }, "value", "text", Model.Articles.ArticleType),
                                new { style = "width:200px;height:30px;font-size:medium;" })
                            </p>
                        </div>
                        <div class="col-md-12">
                            <p>
                                <label>문의내용</label>
                                @Html.TextAreaFor(m => m.Articles.Contents, new { placeholder = "내용을" +
                               " 입력하세요.", @rows = "10", @cols = "80" })
                            </p>
                        </div>

                        <div class="col-md-12">
                            <p><label>첨부</label><input type="file" name="file" id="file" style="border:hidden;" /></p>
                        </div>
                        <div class="col-md-12">

                            @foreach (var file in Model.Files)
                            {
                               <a src="@file.FilePath@file.FileName" width="100" height="100" 
                               onclick="return fnFileDeleteCheck('@file.FileIDX');">@file.FileName</a>
                               @* if (ViewBag.Result == "")
                                {
                                    <a src="@file.FilePath@file.FileName" width="100" height="100"
                                         onclick="return fnFileDeleteCheck('@file.FileIDX');" />
                                }
                                else
                                {
                                    <a href="@file.FilePath@file.FileName" download />
                                }*@
                            }
                        </div>
                    </div>
                    <p>
                        <button type="submit" id="btnSave" onclick="return fnSaveCheck();" class="btn btn-lg
                                btn-lgr-str">
                            수정하기
                        </button>
                        <button type="button" id="btnDelete" onclick="return fnDeleteCheck();" class="btn btn-lg
                                btn-lgr-str">
                            삭제하기
                        </button>
                        <a href="/Board/ArticleList" class="btn btn-lg btn-lgr-str">목록이동</a>
                    </p>
                </form>
            </div>

        </div>
        <div class="dividewhite8"></div>
    </section>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            var result = '@ViewBag.Result';
            if (result == 'OK') {
                alert("정상적으로 저장되었습니다.");
            }
            if (result == 'FAIL') {
                alert("저장작업을 실패하였습니다.");
            }
        });

        //저장 유효성 검사
        function fnSaveCheck() {
            if ($("#Article_Title").val() == "") {
                alert("제목을 입력해주십시오.")
                $("#Article_Title").focus();
                return false;
            }
            if ($("#Article_ArticleType").val() == "") {
                alert("분류 정보를 선택해주십시오.")
                $("#Article_ArticleType").focus();
                return false;
            }
            if ($("#Article_Contents").val() == "") {
                alert("내용을 입력해주십시오.")
                $("#Article_Contents").focus();
                return false;
            }
            confirm("게시글을 수정하시겠습니까?")
            return true;
        }

        function fnDeleteCheck() {
            if (confirm("게시글을 삭제하시겠습니까?") == true) {
                window.location.href = "/Board/ArticleDelete?aidx=" + $("#Articles_ArticleIDX").val();
                alert("게시글이 정상적으로 삭제되었습니다.")
            } else {
                return false;
            }
        }

        function fnFileDeleteCheck(fidx) {
            if (confirm("이미지를 삭제하시겠습니까?") == true) {
                window.location.href = "/Board/FileRemove?fidx=" + fidx;
            } else {
                return false;
            }
        }

    </script>
}